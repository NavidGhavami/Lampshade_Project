<body class="home">
<header class="header style7">
    <div class="top-bar">
        <div class="container">
            <div class="top-bar-right">
                <ul class="header-user-links">
                   
                    <li>
                        <a asp-page="/Index">@DateTime.Now.ToFarsi()</a>
                        <span>---</span>
                        <a asp-page="/Index">به سایت فروشگاهی آنلاین دکومال خوش آمدید </a>

                    </li>
                   
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="main-header">
            <div class="row">
                <div class="col-lg-3 col-sm-4 col-md-3 col-xs-7 col-ts-12 header-element">
                    <div class="logo">
                        <a asp-page="./Index">
                            <img src="~/Theme/assets/images/logo.png" alt="img">
                        </a>
                    </div>
                </div>
                <div class="col-lg-7 col-sm-8 col-md-6 col-xs-5 col-ts-12">
                    <div class="block-search-block">
                        <form method="get" asp-page="/Search" class="form-search form-search-width-category">
                            <div class="form-content">
                                <div class="inner">
                                    <input type="text" class="input" id="value" name="value" placeholder="هرچه می خواهید در فروشگاه جستجو کنید">
                                </div>
                                <button class="btn-search" type="submit">
                                    <span class="icon-search"></span>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-2 col-sm-12 col-md-3 col-xs-12 col-ts-12">
                    <div class="header-control">
                        <div class="block-minicart cleric-mini-cart block-header cleric-dropdown">
                            <a href="javascript:void(0);" class="shopcart-icon" data-cleric="cleric-dropdown">
                                سبد خرید
                                <span class="count">
									0
									</span>
                            </a>
                            <div class="no-product cleric-submenu">
                                <p class="text">
                                  سبد خرید شما خالی می باشد
                                </p>
                            </div>
                        </div>
                        <div class="block-account block-header cleric-dropdown">
                            <a href="javascript:void(0);" data-cleric="cleric-dropdown">
                                <span class="flaticon-user"></span>
                            </a>
                            <div class="header-account cleric-submenu">
                                <div class="header-user-form-tabs">
                                   
                                    <div class="tab-container">
                                        @if (AuthHelper.IsAuthenticated())
                                        {
                                            <ul class="tab-link">
                                                <li class="active">
                                                    <a data-toggle="tab" aria-expanded="true" >@AuthHelper.CurrentAccountInfo().FullName عزیز خوش آمدید</a>
                                                </li>
                                            </ul>
                                        }
                                        else
                                        {
                                            <ul class="tab-link">
                                                <li class="active">
                                                    <a data-toggle="tab" aria-expanded="true" href="#header-tab-login">ورود</a>
                                                </li>
                                                <li>
                                                    <a data-toggle="tab" aria-expanded="true" href="#header-tab-rigister">ثبت نام</a>
                                                </li>
                                            </ul>
                                            <div id="header-tab-login" class="tab-panel active">
                                            <form method="post" asp-page="/Account" asp-page-handler="Login" class="login form-login">
                                                <p class="form-row form-row-wide">
                                                    <input type="text" name="username" placeholder="نام کاربری" class="input-text">
                                                </p>
                                                <p class="form-row form-row-wide">
                                                    <input type="password" name="password" class="input-text" placeholder="کلمه عبور">
                                                </p>
                                                <p class="form-row">
                                                    <label class="form-checkbox">
                                                        <input type="checkbox" class="input-checkbox">
                                                        <span>
                                                            مرا به خاطر بسپار
                                                        </span>
                                                    </label>
                                                    <input type="submit" class="button" value="ورود">
                                                </p>
                                                <p class="lost_password">
                                                    <a href="#">کلمه عبور خود را فراموش کرده اید؟</a>
                                                </p>
                                            </form>
                                        </div>
                                        <div id="header-tab-rigister" class="tab-panel">
                                            <form method="post"  asp-page="/Account" asp-page-handler="Register" class="register form-register">
                                                <p class="form-row form-row-wide">
                                                    <input type="text" name="fullname" placeholder="نام و نام خانوادگی" class="input-text">
                                                </p>
                                                <p class="form-row form-row-wide">
                                                    <input type="text" name="username" placeholder="نام کاربری" class="input-text">
                                                </p>
                                                <p class="form-row form-row-wide">
                                                    <input type="email" name="email" placeholder="ایمیل" class="input-text">
                                                </p>
                                                <p class="form-row form-row-wide">
                                                    <input type="text" name="mobile" placeholder="موبایل" class="input-text">
                                                </p>
                                                <p class="form-row form-row-wide">
                                                    <input type="password" name="password" class="input-text" placeholder="کلمه عبور">
                                                </p>
                                                <p class="form-row form-row-wide">
                                                    <input type="password" name="repassword" class="input-text" placeholder="تکرار کلمه عبور">
                                                </p>
                                                <p class="form-row">
                                                    <input type="submit" class="button" value="ثبت نام">
                                                </p>
                                            </form>
                                        </div>
                                        }
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                        <a class="menu-bar mobile-navigation menu-toggle" href="#">
                            <span></span>
                            <span></span>
                            <span></span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Menu Starts-->

    @await Component.InvokeAsync("Menu")

    <!-- Menu Ends-->

</header>

@RenderBody()


