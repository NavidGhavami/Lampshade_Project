@page
@model ServiceHost.Pages.AccountModel

@{
    ViewData["Title"] = "ورود به سایت";
}

	<div class="main-content main-content-login">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<div class="breadcrumb-trail breadcrumbs">
						<ul class="trail-items breadcrumb">
							<li class="trail-item trail-begin">
								<a asp-page="./Index">صفحه اصلی</a>
							</li>
							<li class="trail-item trail-end active">
								ورود و ثبت نام
							</li>
						</ul>
					</div>
				</div>
			</div>
			<div class="row RightDirection">
				<div class="content-area col-lg-12 col-md-12 col-sm-12 col-xs-12">
					<div class="site-main">
						<h3 class="custom_blog_title">
							ورود و ثبت نام
						</h3>
						<div class="customer_login">
							<div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-12">
                                    @if (Model.LoginMessage != null)
                                    {
                                        <div class="alert alert-danger">
                                            @Model.LoginMessage
                                        </div>
                                    }
                                    
                                    <div class="login-item">
                                        <h5 class="title-login">ورود به سایت</h5>
                                        <form class="login" method="post" asp-page-handler="Login">
                                            <p class="form-row form-row-wide">
                                                <label class="text">نام کاربری</label>
                                                <input name="username" title="username" type="text" class="input-text">
                                            </p>
                                            <p class="form-row form-row-wide">
                                                <label class="text">کلمه عبور</label>
                                                <input name="password" title="password" type="password" class="input-text">
                                            </p>
                                            <p class="lost_password">
                                                <span class="inline pull-left">

                                                </span>
                                                <a href="#" class="forgot-pw">کلمه عبور خود را فراموش کرده اید؟</a>
                                            </p>
                                            <br/>
                                            <br/>
                                            <br/>
                                            <div class="form-row">
                                                <input type="submit" class="button-submit" value="ورود">
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-12">
                                    @if (Model.RegisterMessage != null)
                                    {
                                        <div class="alert alert-danger">
                                            @Model.RegisterMessage
                                        </div>
                                    }
                                    <div class="login-item">
                                        <h5 class="title-login">ثبت نام کنید</h5>
                                        <form method="post" asp-page-handler="Register" class="register">
                                            <p class="form-row form-row-wide">
                                                <label class="text">نام و نام خانوادگی</label>
                                                <input name="fullname" title="fullname" type="text" class="input-text">
                                            </p>
                                            <p class="form-row form-row-wide">
                                                <label class="text">نام کاربری</label>
                                                <input name="username" title="username" type="text" class="input-text">
                                            </p>
                                            <p class="form-row form-row-wide">
                                                <label class="text">ایمیل</label>
                                                <input name="email" title="email" type="email" class="input-text">
                                            </p>
                                            <p class="form-row form-row-wide">
                                                <label class="text">موبایل</label>
                                                <input name="mobile" title="mobile" type="text" class="input-text">
                                            </p>
                                            <p class="form-row form-row-wide">
                                                <label class="text">کلمه عبور</label>
                                                <input name="password" title="password" type="password" class="input-text">
                                            </p>
                                            <p class="form-row form-row-wide">
                                                <label class="text">تایید کلمه عبور</label>
                                                <input name="repassword" title="password" type="password" class="input-text">
                                            </p>
                                            <p class="form-row">
                                                <span class="inline">
                                                    <input type="checkbox" id="cb2">
                                                    <label for="cb2" class="label-text">با قوانین <span>سایت موافقم</span></label>
                                                </span>
                                            </p>
                                            <p class="">
                                                <input type="submit" class="button-submit" value="ثبت نام">
                                            </p>
                                        </form>
                                    </div>
                                </div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>