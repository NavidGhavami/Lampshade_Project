                    </ul>
                </div>

                <p class="text-muted m-0">@AuthHelper.CurrentAccountInfo().Role</p>
            </div>
        </div>
        <!--- Divider -->
        <div id="sidebar-menu">
            <ul>
                <li>
                    <a asp-page="/Index" class="waves-effect active"><i class="md md-home"></i><span> داشبورد </span></a>
                </li>

                @if (AuthHelper.CurrentAccountRole() == Roles.Administrator || AuthHelper.CurrentAccountRole() == Roles.AdminAssistant)
                {
                <li class="has_sub">
                    <a class="waves-effect"><i class="md md-shopping-basket"></i><span> فروشگاه </span><span class="pull-right"><i class="md md-add"></i></span></a>
                    <ul class="list-unstyled">
                        <li><a asp-page="/Shop/ProductCategory/Index">گروه محصولات</a></li>
                        <li><a asp-page="/Shop/Products/Index">محصولات</a></li>
